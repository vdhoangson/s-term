{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Electron",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "build:electron"
      ],
      "problemMatcher": [
        "$tsc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": ["Start Dev Server"]
    },
    {
      "label": "Start Dev Server",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev:renderer"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Local:.*"
        }
      }
    }
  ]
}
