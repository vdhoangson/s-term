{
  "name": "s-term",
  "version": "0.1.0",
  "description": "Modern SSH Terminal with SFTP support",
  "author": {
    "name": "vdhoangson",
    "email": "vdhoangson@gmail.com",
    "url": "https://github.com/vdhoangson"
  },
  "homepage": "https://github.com/vdhoangson/s-term",
  "license": "MIT",
  "main": "dist-electron/electron/main/index.js",
  "type": "commonjs",
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron . --trace-warnings",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:renderer": "vite build",
    "start": "electron . --trace-warnings",
    "build": "npm run build:renderer && npm run build:electron && electron-builder",
    "pack": "npm run build:renderer && npm run build:electron && electron-builder --dir",
    "build:win": "npm run build:renderer && npm run build:electron && electron-builder --win",
    "build:mac": "npm run build:renderer && npm run build:electron && electron-builder --mac",
    "build:linux": "npm run build:renderer && npm run build:electron && electron-builder --linux",
    "build:all": "npm run build:renderer && npm run build:electron && electron-builder -mwl",
    "format": "prettier --write \"src/**/*.{js,ts,vue,json,css,scss,md}\" \"electron/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,vue,json,css,scss,md}\" \"electron/**/*.{js,ts}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.sterm.app",
    "productName": "S Term",
    "copyright": "Copyright Â© 2025",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "**/*.node",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "vdhoangson",
        "repo": "s-term"
      }
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "build/icons/mac/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "appx"
      ],
      "icon": "build/icons/win/icon.ico",
      "artifactName": "S-Term-${version}-${arch}.${ext}",
      "publisherName": "vdhoangson",
      "appx": {
        "applicationId": "STerm",
        "identityName": "com.sterm.app",
        "publisher": "CN=vdhoangson",
        "displayName": "S-Term"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "S Term"
    },
    "linux": {
      "target": [
        "deb",
        "snap",
        "AppImage",
        "rpm",
        "pacman"
      ],
      "executableName": "s-term",
      "category": "Development",
      "icon": "build/icons/png",
      "synopsis": "Modern SSH Terminal",
      "description": "Modern SSH Terminal with SFTP support, X11 forwarding, and remote monitoring"
    },
    "snap": {
      "confinement": "classic",
      "grade": "stable",
      "summary": "Modern SSH Terminal with SFTP support",
      "plugs": [
        "home",
        "network",
        "network-bind",
        "ssh-keys",
        "ssh-public-keys",
        "desktop",
        "desktop-legacy",
        "x11",
        "unity7",
        "browser-support",
        "pulseaudio",
        "password-manager-service"
      ]
    },
    "deb": {
      "depends": [
        "libsecret-1-0"
      ]
    },
    "rpm": {
      "depends": [
        "libsecret"
      ]
    },
    "pacman": {
      "depends": [
        "libsecret"
      ]
    }
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "keytar": "^7.9.0",
    "node-pty": "1.1.0-beta39",
    "pinia": "^3.0.4",
    "ssh2": "^1.17.0",
    "vue": "^3.5.25",
    "vue-i18n": "^9.14.5",
    "vuedraggable": "^4.1.0",
    "vuetify": "^3.11.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^24.10.1",
    "@types/ssh2": "^1.15.5",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-vuetify": "^2.1.2",
    "vue-eslint-parser": "^10.2.0",
    "wait-on": "^7.0.0"
  }
}
